{% extends "::base.html.twig" %}

{% block title %}
    Oferty
{% endblock %}

{% block content %}    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="fa fa-home"></i>
                    <h3 class="box-title">Dodaj ofertę</h3>

                    <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Wyjdź">
                        <div class="btn-group" >                            
                            <a href="{{ path('user_offer') }}" class="btn btn-default btn-sm"><i class="fa fa-close"></i></a>
                        </div>
                    </div>

                </div>
                <div class="box-body">
                    {{ form_start(form) }} 
                    <div class="row">
                        <div class="col-md-7">
                            {{ form_row(form.name) }}
                            {{ form_row(form.slug) }}
                            {{ form_row(form.description) }}
                            {{ form_row(form.details) }}
                        </div>
                        <div class="col-md-5">
                            {{ form_row(form.localization) }}
                            {{ form_row(form.pricePerMeter) }}
                            {{ form_row(form.area) }}
                            {{ form_row(form.rooms) }}
                            {{ form_row(form.floor) }}
                            {{ form_row(form.numberOfFloors) }}
                            {{ form_row(form.type) }}
                            {{ form_row(form.availableFrom) }}
                            {{ form_row(form.discount) }}
                            {{ form_row(form.agent) }}
                            <hr/>
                            {{ form_row(form.hotOffer) }}
                            {{ form_row(form.published) }}
                            {{ form_row(form.rent) }}
                            <hr />
                            {{ form_row(form.submit) }}
                            
                        </div>
                    </div>
                    {{ form_end(form) }} 
                </div>
                <div class="box-footer">

                </div>
            </div>
        </div>
    </div>    
{% endblock %}

{% block css %}

{% endblock %}

{% block js %}
    <script src='/plugins/ckeditor/config.js'></script>
    <script src='/plugins/ckeditor/styles.js'></script>
    <script src='/plugins/ckeditor/ckeditor.js'></script>
{% endblock %}
