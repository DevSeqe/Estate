{% extends "::frontbase.html.twig" %}

{% block content %}
    <div class="grayLineBottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">Znajdź nieruchomość</h1>
                    {{ render(controller('MainBundle:Elements:search')) }}
                </div>
            </div>
        </div>
    </div>
    <div class="grayLineBottom">
        <div class="container m30 mb30">
            <div class="row">
                <div class="col-md-4 col-sm-6 mainPageBox sell" onclick="window.location = '{{ path('offers_sell') }}';">sprzedaż <span>>></span></div>
                <div class="col-md-4 col-sm-6 mainPageBox rent" onclick="window.location = '{{ path('offers_rent') }}';">wynajem <span>>></span></div>
                <div class="col-md-4 col-sm-6 mainPageBox advice" onclick="window.location = '{{ path('advice_page') }}';">jak pracujemy <span>>></span></div>
                <div class="col-md-4 col-sm-6 mainPageBox your_offer" onclick="window.location = '{{ path('contact',{type:'report'}) }}';">zgłoś ofertę <span>>></span></div>
                <div class="col-md-4 col-sm-6 mainPageBox special" onclick="window.location = '{{ path('offers_special') }}';">oferty specjalne <span>>></span></div>
                <div class="col-md-4 col-sm-6 mainPageBox credits" onclick="window.location = '{{ path('credits') }}';">kredyty <span>>></span></div>
            </div>
        </div>
    </div>
    {% if partners|length > 0 %}
        <div class="grayLineBottom m30 mb30">
            <div class="container m30 mb30">
                <div class="row">
                    <h2 class="text-center">Firmy współpracujące</h2>
                    <div class="col-md-12">
                        <div id="bx-partners">
                            {% if partners|length > 6 %}
                                <a class="buttons prev" href="#"><i class="fa fa-chevron-circle-left"></i></a>
                                <div class="viewport">
                                    <div class="overview">
                                        {% for partner in partners %}                                            
                                            <a href="{{ partner.url }}">
                                                <img src="{{ partner.image }}" alt="{{ partner.name }}"/>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                                <a class="buttons next" href="#"><i class="fa fa-chevron-circle-right"></i></a>
                                {% else %}
                                    {% for partner in partners %}                                            
                                    <a href="{{ partner.url }}">
                                        <img src="{{ partner.image }}" alt="{{ partner.name }}"/>
                                    </a>
                                {% endfor %}
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}