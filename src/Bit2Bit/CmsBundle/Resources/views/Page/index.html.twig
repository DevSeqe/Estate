{% extends "::base.html.twig" %}

{% block title %}
    CMS
{% endblock %}

{% block content %}    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="fa fa-files-o"></i>
                    <h3 class="box-title">Zestawienie stron</h3>                    

                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            {% if pages|length > 0 %}
                                <table class="table table-striped table-condensed">
                                    <thead>
                                        <tr>
                                            <th>
                                                Nazwa strony
                                            </th>
                                            <th>
                                                Edytuj
                                            </th>
                                        </tr>
                                    </thead>
                                    {% for page in pages %}
                                        <tr>
                                            <td>{{ page.name }}</td>
                                            <td><a href="{{ path('page_edit', {id:page.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a></td>
                                        </tr>                                
                                    {% endfor %}
                                </table>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i> Nie dodano Å¼adnych stron.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="box-footer">

                </div>
            </div>
        </div>
    </div>
{% endblock %}

