    <body>        
        <div class="headerCont">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <a href="/">
                            <img src="/images/logo.png" class="img-responsive" alt="Zając Nieruchomości" />
                        </a>
                    </div>
                    <div class="col-md-3 col-md-offset-1">
                        <div class="likeBoxCont">
                            Tu będzie like box
                        </div>
                        <div>
                            <a href="#" class="social-btn"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="social-btn"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="social-btn"><i class="fa fa-google-plus"></i></a>
                            <a href="#" class="social-btn"><i class="fa fa-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-md-3 phoneNumber">
                        {{ setting.get('base:phone') }}
                    </div>
                </div>                
            </div>
        </div>
        <div class="menuCont">
            <div class="container">
                <div class="row text-right">
                    <a class="col-md-offset-6 col-md-2" href="/nieruchomosci">Nieruchomości</a>
